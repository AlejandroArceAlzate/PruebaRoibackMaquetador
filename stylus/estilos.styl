body
	background gray
	font-size 16px

.headerContact
	float right
	span
		color white
		font-size .8em
		float right
		margin 1em .5em
	.en
		border 1px solid blue
		border-radius 2em
		padding .5em 3em .5em .5em
		margin-right -4em
		margin-top .5em
		&:before
			border-top 4px solid transparent
			border-bottom 4px solid transparent
			border-right 5px solid blue
			content ""
			display inline-block
			margin-right .2em
	.globalacces
		color #DD4F24
		&:after
			border-left 4px solid transparent
			border-right 4px solid transparent
			border-top 5px solid blue
			content ""
			display inline-block 
	.login
		border-left 1px solid blue
		padding-left 1em

.image
	margin 2em
	display inline-flex
	span
		font-size .6em
		margin 2em .5em
	.logo
		img 
			background black
			width 45px
	.official
		color blue
	.officialLine
		border-bottom 1px solid white
		font-size 1em
		margin-right -.1em
